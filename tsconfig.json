{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src/**/*"]
}